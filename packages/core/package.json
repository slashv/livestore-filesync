{
  "name": "@livestore-filesync/core",
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "description": "Framework-agnostic file syncing for LiveStore applications with OPFS support",
  "keywords": [
    "livestore",
    "file-sync",
    "opfs",
    "effect",
    "offline-first"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./worker": {
      "types": "./dist/worker/index.d.ts",
      "import": "./dist/worker/index.js"
    },
    "./worker/sw.js": "./dist/file-sync-sw.iife.js",
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "import": "./dist/schema/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -b tsconfig.build.json && pnpm run build:sw",
    "build:sw": "esbuild src/worker/file-sync-sw-standalone.ts --bundle --format=iife --outfile=dist/file-sync-sw.iife.js --platform=browser",
    "check": "tsc -b tsconfig.json",
    "test": "vitest"
  },
  "devDependencies": {
    "esbuild": "^0.24.0",
    "@effect/platform": "catalog:",
    "@effect/vitest": "^0.25.1",
    "@livestore/adapter-node": "catalog:",
    "@livestore/livestore": "catalog:",
    "@types/node": "^22.5.2",
    "effect": "catalog:",
    "typescript": "^5.6.2",
    "vitest": "^3.2.0"
  },
  "peerDependencies": {
    "@effect/platform": "catalog:",
    "@livestore/livestore": "catalog:",
    "effect": "catalog:"
  },
  "peerDependenciesMeta": {
    "@livestore/livestore": {
      "optional": true
    }
  }
}
