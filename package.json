{
  "name": "livestore-filesync",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "license": "MIT",
  "description": "File syncing for LiveStore applications",
  "repository": {
    "type": "git",
    "url": "https://github.com/slashv/livestore-filesync"
  },
  "scripts": {
    "build": "pnpm -r build",
    "build:packages": "pnpm --filter '@livestore-filesync/*' build",
    "check": "pnpm -r check",
    "lint": "eslint \"**/{src,test,examples,scripts}/**/*.{ts,tsx,mjs}\" --ignore-pattern \"**/reference/**\"",
    "lint-fix": "pnpm lint --fix",
    "test": "pnpm -r test -- --project=chromium",
    "test:unit": "pnpm --filter @livestore-filesync/core test",
    "test:e2e": "pnpm --filter e2e-tests test -- --project=chromium",
    "dev": "pnpm -r --parallel dev",
    "dev:vue": "pnpm --filter @livestore-filesync/core build && pnpm --filter livestore-filesync-vue-example dev",
    "dev:react": "pnpm --filter @livestore-filesync/core build && pnpm --filter livestore-filesync-react-example dev"
  },
  "devDependencies": {
    "@effect/eslint-plugin": "^0.3.2",
    "@eslint/compat": "1.1.1",
    "@eslint/eslintrc": "3.1.0",
    "@eslint/js": "9.10.0",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "eslint": "^9.10.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-codegen": "^0.28.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "tsx": "^4.17.0",
    "typescript": "^5.6.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}